<h1>Admin Dashboard</h1>
<div class="links">
  <p><%= link_to "All Merchants", admin_merchants_path %></p>
  <p><%= link_to "All Invoices", admin_invoices_path %></p>
</div>

<div class="top_five_customers">
  <h3>Top 5 Customers</h3>
  <% @customers.top_five_customers.each do |customer| %>
  <dl><li><%= customer.full_name %> with <%= customer.successful_transactions_count %> completed transactions</li><dl>
  <% end %>
</div>

<h2>Incomplete Invoices</h2>
<div class="incomplete_invoices">
  <% @invoices.incomplete_invoices.each do |invoice| %>
  <dl><li><%= link_to "Invoice #{invoice.id}", admin_invoice_path(invoice.id) %> - Created: <%= invoice.created_at.strftime("%A, %B %d,%Y") %></li><dl>
  <% end %>
</div>
