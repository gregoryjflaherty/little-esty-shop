<h1>Merchants Index</h1>
<div class="new_link">
  <h5><li><em><strong><%= link_to "Create New Merchant", new_admin_merchant_path %></strong></em></li></h5><br><br>
</div>
<div class="top_five_merchants">
  <h3>Top Merchants by Revenue</h3><br>
  <% @merchants.top_five_by_revenue.each do |merchant| %>
  <h6><strong><%=link_to "#{merchant.name}", admin_merchant_path(merchant.id) %> </strong>- Total revenue - <%= '%.2f' % (merchant.revenue / 100.0) %> </h6>
    <dl><li><%= "Top selling date for #{merchant.name} was #{merchant.best_revenue_day}" %><dl></li>
      <% end %>
    </div>

<h3>All Merchants</h3>
<div class="merchants">
  <% @merchants.each do |merchant| %>
  <dl><li><%=link_to "#{merchant.name}", admin_merchant_path(merchant.id) %></li><dl>
  <% end %>
</div>

<section id="enabled">
<h3>Enabled Merchants</h3>
<% @merchants.enabled.each do |merchant| %>
  <div id="enabled_merchant-<%=merchant.id%>">
    <dl><ol><%= link_to merchant.name, admin_merchant_path(merchant.id)%><dl>
    <%= button_to "Disable", admin_merchant_path(merchant.id), method: :patch, params: { disable: 1 } %></ol>
  </div>
<% end %>
</section>

<div id="disabled">
<h3>Disabled Merchants</h3>
<% @merchants.disabled.each do |merchant| %>
  <div id="disabled_merchant-<%=merchant.id%>">
    <dl><ol><%= link_to merchant.name, admin_merchant_path(merchant.id) %><dl>
    <%= button_to "Enable", admin_merchant_path(merchant.id), method: :patch, params: { enable: 0 } %></ol>
  </div>
<% end %>
</div>
